#:import hex kivy.utils.get_color_from_hex
#:include indexscreen.kv


<LoginScreen>:

    canvas:
        Color:
            rgba: hex('#CA6E1C')
		Rectangle:
			size: self.size
			pos: self.pos


	BoxLayout:
		orientation: 'vertical'
		padding: [30,50,30,50]
		spacing: 30

		Label:
			text: "Bienvenido a EstafetaConnect"
			font_size: 40
		Label:
			text: "(EmbApp380 v17.07.2017)"
			font_size: "25"

		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Usuario'
				font_size: 18
				halign: 'left'
				text_size: root.width-60, 20

			TextInput:
				id: usuario_input
				multiline: False
				font_size: 20


		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'Contrase√±a'
				halign: 'left'
				font_size: 18
				text_size: root.width-60, 20

			TextInput:
				id: contrasena_input
				multiline: False
				password: True
				font_size: 28


		BoxLayout:
			orientation: 'vertical'

			padding: [0,20,0,0]
			Button:

				text: 'Iniciar'
				font_size: 24
				on_press: root.validate_DB()




